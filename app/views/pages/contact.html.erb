<section style="padding: 2rem 1rem;">
  <h1 style="color: #9e8123;">Contact Me</h1>
  <p>Phone: +1 (555) 123-4567</p>

  <form action="#" method="post" style="display: grid; gap: 1rem; max-width: 600px;">
    <input type="text" name="name" placeholder="Your Name" style="padding: 0.5rem; border-radius: 5px;">
    <input type="email" name="email" placeholder="Your Email" style="padding: 0.5rem; border-radius: 5px;">
    <textarea name="message" rows="5" placeholder="Your Message" style="padding: 0.5rem; border-radius: 5px;"></textarea>
    <button type="submit" style="background-color: #9e8123; color: white; padding: 0.75rem; border: none; border-radius: 5px;">Send</button>
  </form>
</section>
