<section style="padding: 2rem 1rem;">
  <h1 style="color: #9e8123;">Gallery</h1>
  <p>Browse a curated selection of luxury car photography and more.</p>

  <div style="display: flex; flex-wrap: wrap; gap: 1rem; margin-top: 2rem;">
    <% 20.times do |i| %>
      <div style="flex: 1 1 30%; background-color: #2f2921; padding: 1rem; border-radius: 10px;">
        <img src="<%= asset_path('not-found.jpg') %>" alt="Gallery Image <%= i + 1 %>" style="width: 100%; height: auto; border-radius: 8px;">
      </div>
    <% end %>
  </div>
</section>
